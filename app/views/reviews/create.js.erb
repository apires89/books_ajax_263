function refreshForm(innerHTML) {
  const newReviewForm =
  document.getElementById('new_review');
  newReviewForm.innerHTML = innerHTML;
}

function addReview(reviewHTML) {
  const reviews =
  document.getElementById('reviews-container');
  reviews.insertAdjacentHTML('afterbegin', reviewHTML);
}

<% if @review.errors.any? %>
   // refresh form with errors
   refreshForm('<%= j render "reviews/form" %>');
<% else %>
// add a review and remove the possibility to make a new one
addReview('<%= j render "reviews/review", review: @review %>');
document.getElementById('new_review').remove();

<% end %>
